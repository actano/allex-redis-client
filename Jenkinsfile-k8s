library 'jenkins-k8s-pipeline-scripts@v2'

pipeline {
  agent {
    label "jenkins-nodejs-12"
  }
  stages {
    stage('Build') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "yarn install"
                sh "yarn build"
              }
            }
          }
        }
      }
    }
    stage('Lint') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "CI=true yarn lint"
              }
            }
          }
        }
      }
    }
    stage('Typecheck') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "CI=true yarn typecheck"
              }
            }
          }
        }
      }
    }
    stage('Tests') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "CI=true yarn test"
              }
            }
          }
        }
      }
    }
    stage('publish') {
      when {
        tag "*"
      }
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.publish()
            }
          }
        }
      }
    }
  }
  post {
      failure {
        sendNotification currentBuild.result, '#jenkins'
      }
      fixed {
        sendNotification currentBuild.result, '#jenkins'
      }
  }
}
